= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "Type your comment here:", :for => "comment_body"
    = f.text_area :body
  .actions
    %ul.button-group
      %li= f.submit 'Save', :class => :button
      %li= link_to 'Back', comments_path, :class => [:button, :secondary]
    
